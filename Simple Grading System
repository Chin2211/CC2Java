import java.util.Scanner;
public class GradingSystem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Enter your exam score: ");  // Ask the user for their exam score
        int score = scanner.nextInt();
        char grade;

        if (score >= 90 && score <= 100) {            // Determine the grade using if-else if-else
            grade = 'A';
        } else if (score >= 80) {
            grade = 'B';
        } else if (score >= 70) {
            grade = 'C';
        } else if (score >= 60) {
            grade = 'D';
        } else {
            grade = 'F';
        }

        System.out.println("Your grade is: " + grade);
           
    }
}
